<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:weightSum="1">


            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NAZAD"
                android:id="@+id/button_nazad" android:layout_centerVertical="true" android:layout_alignParentLeft="true"
                android:layout_marginLeft="39dp"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OK"
                android:id="@+id/button_ok"
                android:layout_alignTop="@+id/button_nazad" android:layout_centerHorizontal="true"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/txt"
                android:background="#fffff5fc"
                android:layout_marginBottom="73dp" android:layout_above="@+id/button_nazad"
                android:layout_alignParentLeft="true" android:textColor="#ff090909"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Name"
                android:ems="10"
                android:id="@+id/editText2"
                android:layout_marginBottom="56dp" android:layout_above="@+id/txt"
                android:layout_alignRight="@+id/button2" android:background="#ffffffff" android:textColor="#ff0e0e0e"/>
    </RelativeLayout>
